{
    "init": {
        "cmds": [
            "export CMAKE_EXPORT_COMPILE_COMMANDS=1",
            "export CMAKE_LOG_LEVEL=NOTICE",
            "export CMAKE_GENERATOR='Unix Makefiles'",
            "export RUN_BUILD_TYPE=Debug",
            "export TEST=./test/",
            "export ARGS=''"
        ]
    },
    "tasks": {
        "run": {
            "icon": "󰐊",
            "desc": "build and run the project",
            "cmd": [
                "export BUILD=./build/",
                "cmake -B $BUILD -S ./ --log-level=$CMAKE_LOG_LEVEL -DCMAKE_BUILD_TYPE=$RUN_BUILD_TYPE; cmake --build $BUILD",
                "echo; $BUILD/main $ARGS"
            ]
        },
        "debug": {
            "icon": "󰨰",
            "desc": "debug the project via gdb",
            "cmd": [
                "export BUILD=./build/",
                "gdb $BUILD/main $ARGS"
            ]
        },
        "test": {
            "icon": "󰙨",
            "desc": "test the project",
            "cmd": [
                "cd $TEST",
                "export BUILD=./build/",
                "cmake -B $BUILD -S ./ --log-level=$CMAKE_LOG_LEVEL -DCMAKE_BUILD_TYPE=$RUN_BUILD_TYPE; cmake --build $BUILD",
                "echo; $BUILD/test"
            ]
        },
        "clean": {
            "icon": "󰃢",
            "desc": "clean",
            "cmd": "rm -r ./build/*"
        }
    }
}
